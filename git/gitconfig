[merge]
    tool = vimdiff

[alias]
    amend = !sh -c 'git commit --amend --date=\"$(date)\"'

    co = checkout
    st = status
    br = branch

    unstage = reset HEAD
    last = log -1 HEAD

[credential]
    helper = cache

