# general aliases
alias ls='ls --group-directories-first --color=auto'
alias d='cd /media/data/'
alias riv='cd ~/.wine/drive_c/users/ilias/op_admin/tmp'

# applications aliases
alias p2='python2'
alias p3='python3'
alias ip2='ipython2'
alias ip3='ipython3'
alias g89='gcc -Wall -W -pedantic -ansi -std=c89'
alias g99='gcc -Wall -W -pedantic -ansi -std=c99'
alias packer='packer --noedit'
alias packerno='packer --noedit --noconfirm'

# quick ssh connections
alias aetos='ssh istamati@aetos.it.teithe.gr'
alias stamkozanit='ssh ilias@stamkozanit'
alias testserver='ssh ilias@testserver'
alias euclid='ssh ilias@euclid'

# when using sudo, use alias expansion (otherwise sudo ignores your aliases)
alias sudo='sudo '

# pacman aliases
if [ -f /var/log/pacman.log ]; then
	alias up='sudo pacman -Syu'
	alias orphansls='pacman -Qdt'
	alias orphansrm='sudo pacman -Rns $(pacman -Qtdq)'
	alias cacheclean='sudo pacman -Sc'
	alias fromaur='pacman -Qm'
fi

# apt aliases
if [ -d /var/log/apt/ ] || [ -f /var/log/apt.log ]; then
	alias up='sudo apt-get update && sudo apt-get upgrade'
fi

# systemd aliases and functions
# each ends in the letter 'd' to avoid conflicts with zsh builtins such as enable
# startd = start daemon ... etc.
alias listd='find /etc/systemd/system -mindepth 1 -type d | xargs ls -l --color'

startd() { sudo systemctl start $1.service; }
stopd() { sudo systemctl stop $1.service; }
restartd() { sudo systemctl restart $1.service; }

statusd() { sudo systemctl status $1.service; }
enabled() { sudo systemctl enable $1.service; }
disabled() { sudo systemctl disable $1.service; }
