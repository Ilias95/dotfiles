# shell conveniences for working with 389 Directory Server

path+=(/opt/dirsrv/sbin/ /opt/dirsrv/bin/)

export PYTHONPATH="/home/ilias/lib389"

alias clone389='git clone https://pagure.io/389-ds-base.git'
alias phase1='autoreconf -fiv'
alias phase2='./configure --enable-debug --with-openldap --enable-cmocka --enable-asan'
alias ds='python3 /home/ilias/lib389/cli/dsconf ldap://localhost -D "cn=Directory Manager"'
alias st='sudo start-dirsrv localhost'
alias stp='sudo stop-dirsrv localhost'
alias dse='sudo vim /opt/dirsrv/etc/dirsrv/slapd-localhost/dse.ldif'
